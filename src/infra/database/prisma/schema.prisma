generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Available {
  disponivel
  reservada
}

enum priceRange {
  gourmet
  economico
  luxo
  normal
  moderado
}

enum DaysWeek {
  domingo
  segunda
  terca
  quarta
  quinta
  sexta
  sabado
}

enum PayMethod {
  dinheiro
  debito
  credito
  pix
}

model User {
  id         String       @id @default(uuid())
  name       String       @unique
  email      String       @unique
  password   String
  phone      String?
  photo      String?
  created_at DateTime     @default(now())
  favorite   Favorite[]
  reserve    Reserve[]
  available  available[]
  restaurant Restaurant[]

  @@map("user")
}

model Favorite {
  id            String      @id @default(uuid())
  user_id       String?
  user          User?       @relation(fields: [user_id], references: [id])
  restaurant_id String?
  restaurant    Restaurant? @relation(fields: [restaurant_id], references: [id])
  created_at    DateTime    @default(now())

  @@map("favorite")
}

model Restaurant {
  id             String       @id @default(uuid())
  name           String
  price_range    priceRange[]
  address        String
  phone          String?
  open_days      DaysWeek[]
  close_days     DaysWeek[]
  opening_times  String
  closing_times  String
  photo          String?
  culinary_types String
  description    String?
  pay_methods    PayMethod[]
  user_id        String?
  user           User?        @relation(fields: [user_id], references: [id])
  created_at     DateTime     @default(now())
  Favorite       Favorite[]
  reserve        Reserve[]
  available      available[]
  table          table[]

  @@map("restaurant")
}

model table {
  id             String      @id @default(uuid())
  id_restaurant  String?
  restaurant     Restaurant? @relation(fields: [id_restaurant], references: [id])
  quantities     Int
  status_reserve Available
  reserve        Reserve[]

  @@map("table")
}

model Reserve {
  id            String      @id @default(uuid())
  table_id      String?
  table         table?      @relation(fields: [table_id], references: [id])
  user_id       String?
  user          User?       @relation(fields: [user_id], references: [id])
  restaurant_id String?
  restaurant    Restaurant? @relation(fields: [restaurant_id], references: [id])
  date_reserve  DateTime
  created_at    DateTime    @default(now())

  @@map("tablereserve")
}

model available {
  id            String      @id @default(uuid())
  user_id       String
  user          User?       @relation(fields: [user_id], references: [id])
  restaurant_id String?
  restaurant    Restaurant? @relation(fields: [restaurant_id], references: [id])
  available     Int         @default(0)

  @@map("available")
}

model CategoryMenu {
  id   String     @id @default(uuid())
  name String
  dish DishMenu[]

  @@map("categorymenu")
}

model DishMenu {
  id          String       @id @default(uuid())
  name        String
  description String?
  price       Float
  available   Boolean?
  evaluate    Int?
  urlImage    String?
  category    CategoryMenu @relation(fields: [category_id], references: [id])
  category_id String

  @@map("dishmenu")
}
